@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size f-regular
	// width 100%
	// height 100%
	overflow-x hidden


body
	font-family mainFont
	// height 100%
	background-color clr-srfc--drk
	// color clr-f
	// overflow-x hidden
	font-family mainFont

h1,h2,h3,h4,h5,h6
	margin 0
	color clr-title

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0
	line-height 2
	color clr-txt
	font-size sz-regular--dsktp
a
	color black
	text-decoration none

button
	font-size sz-regular--dsktp
	border none
	border-radius 12px

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	max-width 1260px
	margin 0 auto
	// overflow-x hidden
	// overflow-x hidden



button
	cursor pointer

@media (max-width 768px)
	html
	body
		overflow-x hidden

	.container
		max-width 95% !important
		width 95% !important
		// overflow-x hidden !importan


